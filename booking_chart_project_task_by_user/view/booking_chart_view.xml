<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Views -->
        <record id="view_res_users_booking" model="ir.ui.view">
            <field name="name">res.users.booking</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <booking version="7.0">
                    <items title="name" />
                </booking>
            </field>
        </record>
        
        <record id="view_res_users_search" model="ir.ui.view">
            <field name="name">res.users.search</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
               <search string="Users">
                    <field name="name" string="Users"/>
                    <group expand="0" string="Group By...">
                        <filter string="Company" name="company_id" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</openerp>
